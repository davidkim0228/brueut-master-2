<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @sponsorpost.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @sponsorpost.content %>
</p>

<p>
  <strong>Post:</strong>
  <%= @sponsorpost.post_id %>
</p>

<h2>Comments</h2>
<% @sponsorpost.sponsor_comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>

  <p>
  <%= link_to 'Destroy Comment', [comment.sponsorpost, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_with(model: [ @sponsorpost, @sponsorpost.sponsor_comments.build ], local: true) do |form| %>
  <%= form.hidden_field :commenter, value: current_user.uid.to_s %>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_sponsorpost_path(@sponsorpost) %> |
<%= link_to 'Back', sponsorposts_path %>
